@{
ViewData["Title"] = "Home Page";
}
@section styles{ 
    @* <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> *@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $('#myList a').on('click', function (e) {
            e.preventDefault()
            
        $(this).tab('show')
    })
    </script>
} 
<div class="text-center">
   <h1 class="display-4">Bienvenido/a al Foro Web</h1>
   @if(Context.Session.Keys.Contains
   <String>
   ("usuario")){
   <p>Encuentra respuesta a tus preguntas.</p>
   <a type="button" class="btn btn-secondary" asp-action="RegistrarPregunta" asp-controller="Pregunta">Crear Pregunta</a>
   <!--Preguntas y Contexto-->
   <p></p>
   <div class="list-group" style="text-align: left;">
        <p type="button" class="list-group-item list-group-item-action active">
            Preguntas
        </p>
        @foreach (PreguntaModel item in ViewBag.preguntas)
        {
            <a type="button" class="list-group-item list-group-item-action" asp-action="VerPregunta" asp-controller="Pregunta" asp-route-idPregunta="@item.idPregunta">@item.tituloPregunta</a>
        }
   </div>
   }
   else
   {
   <center>
      <p><strong>Registrate para ver las respuestas ;)</strong></p>
   </center>
   }
</div>