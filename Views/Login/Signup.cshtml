@{
    ViewData["Title"] = "Registro";
}
@if(ViewBag.estadoRegistro == 0){
    <div class="alert alert-warning" role="alert">
        El usuario se encuentra registrado en nuestra base de datos, pruebe con otro.
    </div>
}
@if(ViewBag.estadoRegistro == 1){
    <div class="alert alert-success" role="alert">
        Registro exitoso!.
    </div>
}
<form asp-controller="Usuario" asp-action="Registrar">
  <div class="form-group">
    <label for="exampleInputEmail1">Usuario</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese nombre de usuario" name="usuario" required>
    <small id="emailHelp" class="form-text text-muted">Ingresa el Nombre de Usuario que deseas usar.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Contraseña</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="contraseña" required>
  </div>
  <p></p>
  <button type="submit" class="btn btn-primary">Registrar!</button>
</form>